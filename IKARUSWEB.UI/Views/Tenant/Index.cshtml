@model IEnumerable<IKARUSWEB.UI.Models.TenantViewModels.TenantViewModel>
@{
    ViewData["Title"] = "Tenants";
}

<h2>Tenants</h2>
<p><a asp-action="Create" class="btn btn-primary">New Tenant</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Code</td>
                <td>@t.Name</td>
                <td>@t.CreatedDate</td>
                <td>
                    <a asp-action="Details" asp-route-id="@t.Id">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
