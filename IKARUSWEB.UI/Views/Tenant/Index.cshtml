@model IEnumerable<TenantViewModel>
@{
    ViewData["Title"] = "Tenants";
}

<h2>Tenants</h2>
<p><a asp-action="Create" class="btn btn-primary">New Tenant</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Created</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Code</td>
                <td>@t.Name</td>
                <td>@t.CreatedDate</td>
                <td>
                    <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-info btn-sm">View</a>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@t.Id" method="post"
                          onsubmit="return confirm('Bu tenant’ı silmek istediğinize emin misiniz?');">
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
